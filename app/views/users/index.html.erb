<h1>Учетные записи</h1>

<table>
  <tr>
    <th>E-mail</th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.email %></td>
    <td><%= link_to 'Править', edit_user_path(user) %></td>
    <td><%= link_to 'Удалить', user, confirm: 'Точно удалить?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= button_to 'Добавить учетную запись', { :action => :new } , { :class => :btn  , :method => :get } %>
