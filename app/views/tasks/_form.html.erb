<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2>Ошибки при сохранении</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="clearfix">
    <%= f.label :name %>
    <div class="input">
      <%= f.text_field :name %>
    </div>
  </div>
  
  <div class="actions">
    <%= f.submit :class => 'btn primary' %>
    <input type="button" value="Вернуться к списку" class="btn" onclick="window.location.href='<%= tasks_path %>'" />
  </div>
<% end %>
