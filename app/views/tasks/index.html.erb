<h1>Список заданий</h1>

<table>
  <tr>
    <th>Название</th>
    <th>Последний поиск</th>
    <th>Добавлено твитов</th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= link_to task.name , task %></td>
    <td><%= task.last_search %></td>
    <td><%= task.new_tweets %></td>
    <td><%= link_to 'Правка', edit_task_path(task) %></td>
    <td><%= link_to 'Удалить', task, confirm: 'Точно удалить?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= button_to 'Добавить задание', { :action => :new } , { :class => :btn  , :method => :get } %>
